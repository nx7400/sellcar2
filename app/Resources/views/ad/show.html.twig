{% extends 'base.html.twig' %}

{% block title %}Szczegóły ogłoszenia{% endblock %}

{% block body %}

    <header>
        <div id="top_bar">
            <div id="logo">
                <button class="menu" onclick="openNav()">MENU</button>
            </div>
        </div>
    </header>

    <div id="ad_details">
        <p>Szczegóły ogłoszenia</p>
    </div>

    <div id="mySidenav" class="sidenav">
        <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
        <a href="{{ path('login') }}">Zaloguj sie</a>
        <a href="{{ path('register') }}">Zarejestruj sie</a>
        <a href="{{ path('adForm') }}">Dodaj ogłoszenie</a>
        <a href="{{ path('userPanel') }}">Panel uzytkownika</a>
    </div>


    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }
    </script>


    <table id="adTable">
        <tbody>
            <tr>
                <th>Tytuł</th>
                <td>{{ ad.title }}</td>
            </tr>
            <tr>
                <th>Cena [zł]</th>
                <td>{{ ad.price }}</td>
            </tr>
            <tr>
                <th>Marka</th>
                <td>{{ ad.brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ ad.model }}</td>
            </tr>
            <tr>
                <th>Rok produkcji</th>
                <td>{{ ad.yearProduction }}</td>
            </tr>
            <tr>
                <th>Moc [KM]</th>
                <td>{{ ad.power }}</td>
            </tr>
            <tr>
                <th>Przebieg [km]</th>
                <td>{{ ad.kilometers }}</td>
            </tr>

        </tbody>
    </table>


    <div id="picture_bar">
        <p>Zdjęcie</p>
    </div>

    <img src="{{ asset(ad.path) }}" width="640" height="450"/>

    <div id="button"><button id="backButton" onclick="location.href='{{ path('ad_index') }}'" >Wróć do listy ogłoszeń</button></div>

